{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ],
        "types": [
            "node",
            "jest",
        ],
        "typeRoots": [
            "src/@types",
            "./node_modules/@types",
        ],
        //"declaration": true,
        //"declarationDir": "dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "outDir": "dist",
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@types": ["@types/index"],
            "@database": ["database/index"],
            "@util": ["util/index"],
            "@middlewares": ["middlewares/index"],
            "@controllers": ["controllers/index"],
            "@lib": ["lib/index"],
            "@models/*": ["models/*"],
            "@schemas": ["schemas/index"],
            "@views": ["views/index"],
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}