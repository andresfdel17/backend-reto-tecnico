{
  "name": "reto-backend",
  "version": "1.0.0",
  "description": "Descripción del proyecto",
  "main": "dist/index.js",
  "authors": [
    {
      "name": "Andrés Felipe Delgado",
      "email": "andresfdel13@hotmail.com"
    }
  ],
  "engines": {
    "node": ">=22.x.x"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/app.js\"",
    "start": "node --max-old-space-size=1024 dist/app.js",
    "format": "prettier --write \"./src/**/*.ts\"",
    "lint": "eslint . --fix",
    "test": "NODE_ENV=test jest --color --verbose --no-cache --coverage --detectOpenHandles --forceExit",
    "set-package-prod": "node --max-old-space-size=1024 set-package-prod.js",
    "setup-backend": "./scripts/start.sh",
    "verify-backend": "./scripts/verify-setup.sh",
    "sync-env": "./scripts/sync-env-template.sh",
    "docker:start": "./scripts/start.sh",
    "docker:stop": "docker-compose down -v",
    "docker:restart": "docker-compose down -v && docker-compose up -d --build --force-recreate",
    "docker:rebuild": "docker-compose build --no-cache && docker-compose up -d --force-recreate",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "moment-timezone": "^0.5.47",
    "mysql2": "^3.14.5",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.3"
  },
  "_moduleAliases": {
    "@types": "dist/@types",
    "@database": "dist/database",
    "@util": "dist/util",
    "@middlewares": "dist/middlewares",
    "@controllers": "dist/controllers",
    "@lib": "dist/lib",
    "@models": "dist/models",
    "@schemas": "dist/schemas",
    "@views": "dist/views"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
